{
  "id": "aspnet-core",
  "version": "1.0.0",
  "name": "ASP.NET Core F# Web Development",
  "description": "ASP.NET Core web development support for F# with popular frameworks",
  "documentationURL": "https://docs.microsoft.com/en-us/aspnet/core/",
  "licenseURL": "https://github.com/dotnet/aspnetcore/blob/main/LICENSE.txt",
  "options": {
    "framework": {
      "type": "string",
      "description": "Web framework choice",
      "default": "giraffe",
      "proposals": ["giraffe", "saturn", "minimal", "mvc"]
    },
    "includeSwagger": {
      "type": "boolean",
      "description": "Install Swagger/OpenAPI tools",
      "default": true
    },
    "includeAuth": {
      "type": "boolean",
      "description": "Add authentication scaffolding",
      "default": false
    },
    "enableHotReload": {
      "type": "boolean",
      "description": "Configure hot reload for development",
      "default": true
    },
    "includeDocker": {
      "type": "boolean",
      "description": "Add Dockerfile for containerization",
      "default": false
    },
    "enableHTTPS": {
      "type": "boolean",
      "description": "Configure HTTPS development certificates",
      "default": true
    },
    "includeEntityFramework": {
      "type": "boolean",
      "description": "Include Entity Framework Core tools",
      "default": false
    }
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/dotnet"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "humao.rest-client"
      ],
      "settings": {
        "dotnet.server.useOmnisharp": false,
        "omnisharp.enableEditorConfigSupport": true,
        "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true
      }
    }
  }
}