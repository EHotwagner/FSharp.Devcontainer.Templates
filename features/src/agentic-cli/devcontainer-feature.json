{
  "id": "agentic-cli",
  "version": "1.0.0",
  "name": "Agentic CLI",
  "description": "Installs Agentic CLI - a modular AI agent system with specialized subagents for enhanced development workflows",
  "documentationURL": "https://github.com/Cluster444/agentic",
  "licenseURL": "https://github.com/Cluster444/agentic/blob/main/LICENSE",
  "options": {
    "version": {
      "type": "string",
      "description": "Version/branch of Agentic to install",
      "default": "latest",
      "proposals": ["latest", "main", "v0.1.7"]
    },
    "installBun": {
      "type": "boolean",
      "description": "Install Bun runtime (required for Agentic)",
      "default": true
    },
    "addToPath": {
      "type": "boolean",
      "description": "Add Agentic CLI to system PATH",
      "default": true
    },
    "createConfig": {
      "type": "boolean",
      "description": "Create basic Agentic configuration files",
      "default": true
    }
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/node"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shellIntegration.enabled": true
      }
    }
  }
}